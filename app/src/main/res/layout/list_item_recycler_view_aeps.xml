<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_recyclerview_aeps_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorOffWhite"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    tools:ignore="HardcodedText,RtlSymmetry,SpUsage">


    <TextView
        android:id="@+id/list_item_recyclerview_aeps_retailer_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:background="@color/colorAccent"
        android:gravity="start"
        android:padding="5dp"
        android:text="RId: 1200803123536RQCRZ"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_recyclerview_aeps_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@color/colorAccent"
        android:gravity="bottom|end"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:text="Amount(INR): 46857"
        android:textColor="@color/colorWhite"
        android:textSize="12dp"
        android:textStyle="bold" />

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/list_item_recyclerview_aeps_expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:el_expanded="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">


            <TextView
                android:id="@+id/list_item_recyclerview_aeps_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:padding="5dp"
                android:text="Transaction Id :  9098765"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/list_item_recyclerview_aeps_kioskid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:padding="5dp"
                android:text="kioskid :75367839"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/list_item_recyclerview_aeps_bcid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:padding="5dp"
                android:text="bcid :7268767829"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/list_item_recyclerview_aeps_service_provider_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|start"
                android:padding="5dp"
                android:text="Provider Id: 021612392793"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="normal" />


        </LinearLayout>

        <TextView
            android:id="@+id/list_item_recyclerview_aeps_trans_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="110dp"
            android:background="@color/colorWhite"
            android:gravity="bottom|start"
            android:padding="5dp"
            android:text="Date: 22/04/20`20 - 22:03:03"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_recyclerview_aeps_total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="110dp"
            android:gravity="bottom|end"
            android:padding="5dp"
            android:text="Total amount(INR): 3420"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textStyle="bold" />
    </net.cachapa.expandablelayout.ExpandableLayout>


</androidx.cardview.widget.CardView>